<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="bank"
            type="com.lucasbais.paymentdemo.datasource.database.entity.BankEntity" />

        <variable
            name="callback"
            type="com.lucasbais.paymentdemo.ui.bank.BankCallback" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() ->  callback.onClick(bank)}"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_margin="@dimen/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:contentDescription="@string/logo"
                android:id="@+id/icon"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:thumbnail="@{bank.thumbnail}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_centerHorizontal="true"
                android:text="@{bank.name}"
                tools:text="@string/loremIpsum" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</layout>
